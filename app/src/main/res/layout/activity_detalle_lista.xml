<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:title=""
        android:titleTextColor="#fff"
        app:layout_collapseMode="pin">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_margin="3dp"
            android:layout_marginLeft="36dp"
            android:scaleType="fitCenter"
            android:src="@drawable/trabajo"
            android:transitionName="@string/transition_name_img" />

    </android.support.v7.widget.Toolbar>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        app:elevation="6dp"
        fab:fab_addButtonColorNormal="@color/colorAccent"
        fab:fab_addButtonColorPressed="@color/colorAccent"
        fab:fab_addButtonPlusIconColor="@android:color/white"
        fab:fab_addButtonSize="normal"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_send_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_send_sms"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_colorPressed="@android:color/white"
            fab:fab_size="mini"
            fab:fab_title="\u0020Enviar SMS\u0020" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_send_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_send_email"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_colorPressed="@android:color/white"
            fab:fab_size="mini"
            fab:fab_title="\u0020Enviar Email\u0020" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_call"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_colorPressed="@android:color/white"
            fab:fab_size="mini"
            fab:fab_title="\u0020Iniciar LLamar\u0020" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_videocall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_video_call"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_colorPressed="@android:color/white"
            fab:fab_size="mini"
            fab:fab_title="\u0020Iniciar Videollamada\u0020" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:clickable="true"
        app:elevation="-1dp"
        android:src="@drawable/fab_plus"
        android:transitionName="@string/transition_action_plus"
        app:rippleColor="#616161" />

</android.support.design.widget.CoordinatorLayout>